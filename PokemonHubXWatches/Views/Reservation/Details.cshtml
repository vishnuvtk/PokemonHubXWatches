@model PokemonHubXWatches.ViewModels.ReservationViewModel

@{
    ViewData["Title"] = "Reservation Details";
}

<h2>Reservation Details</h2>

<div>
    <h4>Reservation ID: @Model.ReservationID</h4>
    <dl class="row">
        <dt class="col-sm-2">Reservation Date</dt>
        <dd class="col-sm-10">@Model.ReservationDate</dd>
        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.UserFullName</dd>
        <dt class="col-sm-2">Watch</dt>
        <dd class="col-sm-10">@Model.WatchName</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.ReservationID" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
