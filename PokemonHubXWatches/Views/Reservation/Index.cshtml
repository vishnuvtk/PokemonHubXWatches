@model IEnumerable<PokemonHubXWatches.ViewModels.ReservationViewModel>

@{
    ViewData["Title"] = "Reservations";
}

<h2>Reservations</h2>

<table class="table">
    <thead>
        <tr>
            <th>Reservation Date</th>
            <th>User Name</th>
            <th>Watch Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.ReservationDate</td>
                <td>@reservation.UserFullName</td>
                <td>@reservation.WatchName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@reservation.ReservationID" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@reservation.ReservationID" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@reservation.ReservationID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Reservation</a>
